{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <style>
        .hero {
            background: linear-gradient(90deg,#2f6fe4 0%, #1fa0c9 100%);
            padding: 90px 0 120px;
            color: white;
            text-align: center;
        }

        .hero h1 {
            font-weight: 800;
            font-size: clamp(32px, 4vw, 48px);
            letter-spacing: -0.5px;
            margin-bottom: 10px;
        }

        .hero p {
            font-size: 16px;
            opacity: .92;
            margin: 0 auto;
            max-width: 720px;
        }

        .stats {
            margin-top: 28px;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            flex-wrap: wrap;
            gap: 24px 80px;
        }

        .stats > div {
            min-width: 160px;
            text-align: center;
        }

        .stat-number {
            font-size: 34px;
            font-weight: 750;
            line-height: 1.1;
            margin-bottom: 4px;
        }

        .stat-label {
            font-size: 13px;
            opacity: .95;
            line-height: 1.2;
        }

        .hero-actions {
            margin-top: 22px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 12px;
        }

        .btn-hero {
            background: rgba(255,255,255,.18);
            border: 1px solid rgba(255,255,255,.35);
            backdrop-filter: blur(6px);
            color: white;
            border-radius: 10px;
            padding: 10px 18px;
            font-weight: 600;
            transition: all .18s ease;
            white-space: nowrap;
        }

        .btn-hero:hover {
            background: rgba(255,255,255,.28);
            color: white;
        }



    </style>


    {# HERO #}
    <section class="hero">
        <div class="container">

            <h1>Sports & Championnats</h1>
            <p>Visualise les sports disponibles et accède aux détails des championnats.</p>

            <div class="stats">
                <div>
                    <div class="stat-number">{{ sports|length }}</div>
                    <div class="stat-label">Sports disponibles</div>
                </div>

                <div>
                    <div class="stat-number">{{ championnats|length }}</div>
                    <div class="stat-label">Championnats</div>
                </div>
            </div>

            <div class="hero-actions">
                <a class="btn btn-hero" href="{{ path('app_sport_new') }}">
                    Créer un sport
                </a>

                <a class="btn btn-hero" href="{{ path('app_championnat_new') }}">
                    Créer un championnat
                </a>

            </div>

        </div>
    </section>


    {# CONTENT #}
    <section class="surface">
        <div class="container">
            <div class="surface-card">

                <div class="row g-4">

                    {# SPORTS #}
                    <div class="col-md-5">
                        <div class="section-title mb-3">Sports</div>

                        {% if sports is empty %}
                            <div class="text-muted">Aucun sport.</div>
                        {% else %}
                            {% for sport in sports %}
                                <div class="sport-box d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="fw-semibold">{{ sport.nom }}</div>
                                        <span class="badge-soft">{{ sport.type }}</span>
                                    </div>

                                    <a class="btn btn-soft btn-sm"
                                       href="{{ path('app_sport_edit', {'id': sport.id}) }}">
                                        Éditer
                                    </a>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>


                    {# CHAMPIONNATS #}
                    <div class="col-md-7">
                        <div class="section-title mb-3">Championnats</div>

                        {% if championnats is empty %}
                            <div class="text-muted">Aucun championnat.</div>
                        {% else %}
                            <table class="table align-middle">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Sport</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for c in championnats %}
                                    <tr>
                                        <td class="fw-semibold">{{ c.nom }}</td>
                                        <td><span class="badge-soft">{{ c.sport }}</span></td>
                                        <td class="text-end">
                                            <a class="btn btn-main btn-sm"
                                               href="{{ path('app_championnat_show', {'id': c.id}) }}">
                                                Détails
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>

                </div>

            </div>
        </div>
    </section>

{% endblock %}
